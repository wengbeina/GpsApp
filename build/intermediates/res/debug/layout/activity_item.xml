<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_liftid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="@string/liftid"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/liftid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/tv_liftid"
        android:textSize="22sp" />


    <TextView
        android:id="@+id/tv_liftaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_liftid"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="@string/liftaddress"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/liftaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_liftid"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_liftaddress"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_lat_long"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_liftaddress"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="@string/lat_long"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_liftaddress"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_lat_long"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/longtitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_liftaddress"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/latitude"
        android:textSize="22sp" />


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_lat_long"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="@string/time"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_lat_long"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_time"
        android:textSize="22sp" />

    <Button
        android:id="@+id/dealbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="35dp"
        android:text="@string/deal"
        android:textSize="22sp" />
</RelativeLayout><!-- From: file:/Users/aqi/work/GpsApp/res/layout/activity_item.xml -->